[Unit]
Description=FixFirst Claw Autonomy Bridge
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/fixfirst-autopost/claw-autonomy-bridge
EnvironmentFile=/opt/fixfirst-autopost/.env
ExecStart=/usr/bin/node /opt/fixfirst-autopost/claw-autonomy-bridge/server.js
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
